{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "clash-verge",
  "version": "1.6.7",
  "identifier": "io.github.clash-verge-rev.clash-verge-rev",
  "app": {
    "security": {
      "assetProtocol": {
        "scope": ["$APPDATA/**", "$RESOURCE/../**", "$HOME/.local/**", "**"],
        "enable": true
      },
      "csp": {
        "default-src": "'self' customprotocol: asset: tauri:",
        "connect-src": "ipc: http://ipc.localhost http: https: ws: wss:",
        "font-src": ["https://fonts.gstatic.com", "tauri:"],
        "img-src": "'self' asset: http://asset.localhost blob: data: http: https:",
        "style-src": "'unsafe-inline' 'self' https://fonts.googleapis.com"
      }
    },
    "windows": []
  },
  "bundle": {
    "active": true,
    "longDescription": "A Clash Meta GUI based on tauri.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["resources"],
    "publisher": "Clash Verge Rev",
    "externalBin": ["sidecar/verge-mihomo", "sidecar/verge-mihomo-alpha"],
    "copyright": "GNU General Public License v3.0",
    "category": "DeveloperTool",
    "shortDescription": "A Clash Meta GUI based on tauri."
  },
  "build": {
    "beforeBuildCommand": "pnpm run web:build",
    "frontendDist": "../dist",
    "beforeDevCommand": "pnpm run web:dev",
    "devUrl": "http://localhost:3000/"
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDRGQ0QyMTIyRTRERTY0MzAKUldRd1pON2tJaUhOVDBuWXQ1NVY0dlNXWkZ2RlZCMmtIYkhqR2pxS3FsMlNERkUycEVBaFlvQm8K",
      "endpoints": [
        "https://mirror.ghproxy.com/https://github.com/oomeow/clash-verge-rev/releases/download/updater/update-proxy.json",
        "https://github.com/oomeow/clash-verge-rev/releases/download/updater/update.json"
      ]
    }
  }
}
